<script>
    const src = [
      '/slides/image-1.jpg',
      '/slides/image-2.jpg',
      '/slides/image-3.jpg',
    ];
    let currentIndex = 0;
    const slides = document.getElementById("slides");
    const totalSlides = src.length;
  
    function updateSlidePosition() {
      if (slides) {
        slides.style.transform = `translateX(-${currentIndex * 100}%)`;
      }
    }
  
    // Auto-slide every 3 seconds
    setInterval(() => {
      currentIndex = (currentIndex + 1) % totalSlides;
      updateSlidePosition();
    }, 3000);
  </script>
  
  <div class="carousel">
    <div class="slides" id="slides">
      <div class="slide">
        <img src="/slides/image-1.jpg" alt="Slide 1" class="slide-image" />
      </div>
      <div class="slide">
        <img src="/slides/image-2.jpg" alt="Slide 2" class="slide-image" />
      </div>
      <div class="slide">
        <img src="/slides/image-3.jpg" alt="Slide 3" class="slide-image" />
      </div>
    </div>
  </div>
  
  <style>
    .carousel {
      position: relative;
      width: 100%;
      max-width: 800px;
      margin: auto;
      overflow: hidden;
      border-radius: 10px;
      max-height: 600px;
      height: 100% ;
    }
  
    .slides {
      display: flex;
      transition: transform 0.6s ease-in-out;
    }
  
    .slide {
      min-width: 100%;
    }
  
    .slide-image {
      width: 100%;
      height: 50%;
      object-fit: cover;
    }
  </style>
  